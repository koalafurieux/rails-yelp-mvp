<div class="container">
  <br>
  <h1>Add a review</h1>

  <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit %>
  <% end %>
  <br>
  <%= link_to "Back to restaurant list", restaurants_path, class: "btn btn-primary" %>
</div>
