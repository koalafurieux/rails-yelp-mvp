<div class="container">
  <br>
  <h1><%= @restaurant.name %></h1>
  <h2><%= "#{@restaurant.category.capitalize} restaurant located in #{@restaurant.address}" %></h2>
  <br>

  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>
      <h2><%= review.content %></h2>
    </li>
    <% end %>
  </ul>

  <br>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to 'Back to restaurants list', restaurants_path, class: "btn btn-primary" %>
</div>
